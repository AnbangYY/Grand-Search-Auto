<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3B7C7C</item>
        <item name="colorPrimaryDark">@color/DarkSlateGrey</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/DarkSlateGrey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="greyButtonThemeOverlay">
        <!-- For filled buttons, your theme's colorPrimary provides the default background color of the component -->
        <item name="colorPrimary">@color/DarkSlateGrey</item>
    </style>

    <style name="RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="RoundedCornerMaterialButton2" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape2</item>
    </style>

</resources>