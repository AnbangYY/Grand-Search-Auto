<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userguide"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView_carpic"
        android:layout_width="113dp"
        android:layout_height="72dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/textView_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />


    <TextView
        android:id="@+id/textView_cardetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Car Sales Search"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView_moredetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_moredetails" />

    <TextView
        android:id="@+id/textView_moredetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="USER GUIDE"
        android:textAllCaps="true"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_carpic"
        app:layout_constraintStart_toEndOf="@+id/imageView_carpic"
        app:layout_constraintTop_toTopOf="@+id/imageView_carpic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="118dp"
        android:text="Welcome to Four-Wheel O'Clock? \nWe and our partners store and/or access information on your device, such as unique IDs in cookies, to process personal data so we can provide you with the best possible experience, personalise ads and content based on your interests, provide social media features and to analyse website usage."
        android:textColor="#070707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_carpic" />


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Frequent Asked Question"
        android:textAllCaps="true"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="I accept"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="369dp"
                android:layout_height="325dp"
                android:layout_marginStart="70dp"
                android:text="How and when do I get paid?
                      \nAll payments are made via electronic transfer prior to handover.
                      \n
                      \nHow long does it take? \nWe can usually complete the inspection, paperwork and payment within 15 minutes.
                      \n
                      \nDo you come to me? \nYes, we will arrange a convinient time and place for you.
                      \n
                      \nWhat paperwork will I need? \nYou will need the vehicleâ€™s registration certificate and your drivers licence. If these are lost or misplaced please email four_wheel_oclock@gmail.com to discuss alternatives.
                      \n
                      \nCan I sell without a roadworthy certificate or registration? \nYes, as licensed motor dealers we are authorised to buy your car without a roadworthy certificate or registration.  "
                android:textColor="#070707"
                tools:layout_editor_absoluteX="152dp"
                tools:layout_editor_absoluteY="168dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="Contact us"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

</androidx.constraintlayout.widget.ConstraintLayout>