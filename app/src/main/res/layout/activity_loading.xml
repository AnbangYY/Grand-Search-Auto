<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="408dp"
        android:layout_height="373dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toTopOf="@+id/slogan_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/four" />


    <TextView
        android:id="@+id/slogan_app"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="395dp"
        android:layout_height="158dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"

        android:layout_marginEnd="1dp"
        android:layout_marginBottom="120dp"
        android:scrollbarSize="4dp"
        android:text="Wheels like never before \n \n Exploring a new chapter with Four-Wheel O'Clock"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textColorHighlight="#3B4EB6"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView_copy"
        android:layout_width="309dp"
        android:layout_height="18dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="5dp"
        android:text="Â©2020 Four-Wheel O'Clcock, All Rights Reserved "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slogan_app"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
